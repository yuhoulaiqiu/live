syntax = "v1"

type ImageRequest {}

type ImageResponse {
	Url string `json:"url"`
}

type ImageShowRequest {
	ImageType string `path:"imageType"`
	ImageName string `path:"imageName"`
}

service file {
	@handler Image
	post /api/file/image (ImageRequest) returns (ImageResponse)

	@handler ImageShow
	get /api/file/uploads/:imageType/:imageName (ImageShowRequest)
}

